}

.sd-tourTitle {
	color: gray;
	font-size: large;
	font-weight: lighter;
	padding-top:15px;
	letter-spacing: 5px;
}
.sd-each {
	padding: 0px 0px 10px 25px;
}
.schedule-name {
	font-size: medium;
}

