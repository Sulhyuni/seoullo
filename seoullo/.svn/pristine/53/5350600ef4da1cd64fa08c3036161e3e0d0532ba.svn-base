}

/* 후기 탭 스타일------------------------ */
#review iframe {
	width: 100%;
	height: 800px;
	border: none;
	margin-top: 25px;
}

/* QnA 탭 스타일----------------------- */

#qna iframe {
	width: 100%;
	height: 500px;
	border: none;
	margin-top: 25px;
	margin-left: 0px;
	margin-right: 0px;
}

/* 예약 부분 스타일---------------------- */
#rightDiv {
	float:right;
	width:350px;
}
.peopleA, .peopleB{
	border: none;
	text-align: center;
	width: 20px;
	margin-left: -4px
}
.minus_btnB
,.plus_btnB
,.minus_btnA
,.plus_btnA {
